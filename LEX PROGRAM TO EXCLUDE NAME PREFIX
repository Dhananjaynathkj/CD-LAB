%{
#include <stdio.h>
#include <string.h>

int i = 0;
int flag = 0;
char name[50] = "";
%}

%%

[a-zA-Z]* {
    for (i = 0; i < yyleng; i++) {
        if (yytext[i] == 'a' && yytext[i+1] == 't' && yytext[i+2] == 'u' && yytext[i+3] == 'l') {
            flag = 1;
        }
    }
    strcpy(name, yytext);
}

[\n] {
    if (flag == 1) {
        printf("%s contains 4 letters of name as substring\n", name);
        flag = 0;
        strcpy(name, "");
        printf("Enter the string\t");
    } else {
        printf("%s does not contain 4 letters of name as substring\n", name);
        strcpy(name, "");
        printf("Enter the string\t");
    }
}

%%

int main() {
    printf("Enter the string\t");
    yylex();
    return 0;
}


#compile code
lex Valid.I
yacc -d Vaid.y
gcc y.tab.c lex.yy.c
./a.out
